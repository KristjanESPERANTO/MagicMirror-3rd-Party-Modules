              },
              "description": {
                "type": "string"
              },
              "outdated": {
                "type": "string"
              }
            }
          },
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "required": [
              "issues"
            ],
            "properties": {
              "issues": {
                "type": "array",
