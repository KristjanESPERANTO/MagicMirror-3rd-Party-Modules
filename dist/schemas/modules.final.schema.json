{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://magicmirror.builders/schemas/modules.json",
  "title": "Modules Listing",
  "type": "object",
  "required": ["modules"],
  "properties": {
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "allOf": [
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "required": [
              "name",
              "category",
              "url",
              "id",
              "maintainer",
              "maintainerURL",
              "description"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "category": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "id": {
                "type": "string",
                "minLength": 1
              },
              "maintainer": {
                "type": "string",
                "minLength": 1
              },
              "maintainerURL": {
                "type": "string",
                "minLength": 1,
                "format": "uri"
              },
              "description": {
                "type": "string"
              },
              "outdated": {
                "type": "string"
              }
            }
          },
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "required": ["issues"],
            "properties": {
              "issues": {
                "type": "boolean"
              }
            }
          },
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
              "stars": {
                "type": "integer",
                "minimum": 0
              },
              "license": {
                "type": "string"
              },
              "hasGithubIssues": {
                "type": "boolean"
              },
              "isArchived": {
                "type": "boolean"
              }
            }
          },
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
              "tags": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "image": {
                "type": "string"
              }
            }
          },
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
              "tags": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "image": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "required": ["defaultSortWeight", "lastCommit"],
            "properties": {
              "defaultSortWeight": {
                "type": "integer"
              },
              "lastCommit": {
                "type": "string",
                "format": "date-time"
              },
              "keywords": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "type": "object",
            "properties": {
              "description": {
                "type": "string",
                "minLength": 1
              },
              "license": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "category": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "id": {
            "type": "string",
            "minLength": 1
          },
          "maintainer": {
            "type": "string",
            "minLength": 1
          },
          "maintainerURL": {
            "type": "string",
            "minLength": 1,
            "format": "uri"
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "outdated": {
            "type": "string"
          },
          "issues": {
            "type": "boolean"
          },
          "stars": {
            "type": "integer",
            "minimum": 0
          },
          "license": {
            "type": "string",
            "minLength": 1
          },
          "hasGithubIssues": {
            "type": "boolean"
          },
          "isArchived": {
            "type": "boolean"
          },
          "tags": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "image": {
            "type": "string",
            "minLength": 1
          },
          "defaultSortWeight": {
            "type": "integer"
          },
          "lastCommit": {
            "type": "string",
            "format": "date-time"
          },
          "keywords": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
