{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://magicmirror.builders/schemas/module-submission.json",
  "title": "MagicMirror Module Submission",
  "description": "Schema for validating module submissions to the MagicMirror module list",
  "type": "object",
  "required": [
    "url",
    "name",
    "description",
    "category",
    "submittedBy",
    "submittedAt",
    "issueNumber"
  ],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "pattern": "^https?://(github\\.com|gitlab\\.com)/[\\w-]+/[\\w.-]+/?$",
      "description": "The repository URL (GitHub or GitLab)"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "The module name"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "A brief description of the module's functionality"
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Primary category for the module"
    },
    "submissionType": {
      "type": "string",
      "enum": ["New Module", "Update Existing Module"],
      "description": "Whether this is a new module or an update"
    },
    "additionalInfo": {
      "type": "string",
      "maxLength": 1000,
      "description": "Additional context about the module"
    },
    "submittedBy": {
      "type": "string",
      "description": "GitHub username of the submitter"
    },
    "submittedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of submission"
    },
    "issueNumber": {
      "type": "integer",
      "minimum": 1,
      "description": "GitHub issue number for this submission"
    }
  },
  "additionalProperties": false
}
