{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://magicmirror.builders/schemas/modules.stage.2.json",
  "title": "Modules Stage 2",
  "type": "array",
  "items": {
    "$ref": "#/$defs/module"
  },
  "$defs": {
    "module": {
      "type": "object",
      "required": [
        "name",
        "category",
        "url",
        "id",
        "maintainer",
        "description",
        "issues"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "maintainer": {
          "type": "string",
          "minLength": 1
        },
        "maintainerURL": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "issues": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "outdated": {
          "type": "string"
        },
        "stars": {
          "type": "integer",
          "minimum": 0
        },
        "license": {
          "type": "string"
        },
        "hasGithubIssues": {
          "type": "boolean"
        },
        "isArchived": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    }
  }
}
