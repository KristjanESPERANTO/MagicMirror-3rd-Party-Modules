{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://magicmirror.builders/schemas/modules.json",
  "title": "Modules Listing",
  "type": "object",
  "required": ["modules"],
  "properties": {
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/module"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "module": {
      "type": "object",
      "required": [
        "name",
        "category",
        "url",
        "id",
        "maintainer",
        "maintainerURL",
        "description",
        "issues",
        "defaultSortWeight",
        "lastCommit"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "id": {
          "type": "string",
          "minLength": 1
        },
        "maintainer": {
          "type": "string",
          "minLength": 1
        },
        "maintainerURL": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "issues": {
          "type": "boolean"
        },
        "defaultSortWeight": {
          "type": "integer"
        },
        "lastCommit": {
          "type": "string",
          "format": "date-time"
        },
        "stars": {
          "type": "integer",
          "minimum": 0
        },
        "license": {
          "type": "string",
          "minLength": 1
        },
        "hasGithubIssues": {
          "type": "boolean"
        },
        "isArchived": {
          "type": "boolean"
        },
        "tags": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "keywords": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "image": {
          "type": "string",
          "minLength": 1
        },
        "outdated": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    }
  }
}
