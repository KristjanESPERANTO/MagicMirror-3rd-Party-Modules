{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://magicmirror.builders/schemas/modules.min.json",
  "title": "Modules Listing (Minified)",
  "type": "object",
  "required": ["modules"],
  "properties": {
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "allOf": [
          { "$ref": "../partials/module.core.json" },
          { "$ref": "../partials/module.issues-boolean.json" },
          { "$ref": "../partials/module.repo-metadata.json" },
          { "$ref": "../partials/module.media.base.json" },
          { "$ref": "../partials/module.media.final.json" },
          { "$ref": "../partials/module.sorting.json" },
          { "$ref": "../partials/module.final-overrides.json" }
        ],
        "properties": {
          "name": { "$ref": "../partials/module.core.json#/properties/name" },
          "category": {
            "$ref": "../partials/module.core.json#/properties/category"
          },
          "url": { "$ref": "../partials/module.core.json#/properties/url" },
          "id": { "$ref": "../partials/module.core.json#/properties/id" },
          "maintainer": {
            "$ref": "../partials/module.core.json#/properties/maintainer"
          },
          "maintainerURL": {
            "$ref": "../partials/module.core.json#/properties/maintainerURL"
          },
          "description": {
            "$ref": "../partials/module.final-overrides.json#/properties/description"
          },
          "outdated": {
            "$ref": "../partials/module.core.json#/properties/outdated"
          },
          "issues": {
            "$ref": "../partials/module.issues-boolean.json#/properties/issues"
          },
          "stars": {
            "$ref": "../partials/module.repo-metadata.json#/properties/stars"
          },
          "license": {
            "$ref": "../partials/module.final-overrides.json#/properties/license"
          },
          "hasGithubIssues": {
            "$ref": "../partials/module.repo-metadata.json#/properties/hasGithubIssues"
          },
          "isArchived": {
            "$ref": "../partials/module.repo-metadata.json#/properties/isArchived"
          },
          "tags": {
            "$ref": "../partials/module.media.final.json#/properties/tags"
          },
          "image": {
            "$ref": "../partials/module.media.final.json#/properties/image"
          },
          "defaultSortWeight": {
            "$ref": "../partials/module.sorting.json#/properties/defaultSortWeight"
          },
          "lastCommit": {
            "$ref": "../partials/module.sorting.json#/properties/lastCommit"
          },
          "keywords": {
            "$ref": "../partials/module.sorting.json#/properties/keywords"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
